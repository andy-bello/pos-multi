{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "node index.js",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Start All",
      "dependsOn": ["Start Frontend", "Start Backend"],
      "dependsOrder": "parallel"
    }
  ]
}
